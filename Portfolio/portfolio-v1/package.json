{
	"name": "portfolio-v1",
	"type": "module",
	"scripts": {
		"build:client": "vite build",
		"build:server": "vite build --config vite.server.config.js",
		"clean": "rm -rf dist statics build",
		"build:all": "pnpm run build:client && pnpm run build:server",
		"dev:frontend": "vite",
		"dev:server": "vite --config vite.server.config.js",
		"start:server": "ts-node server/index.ts",
		"start:backend": "ts-node backend/index.ts",
		"build:backend": "tsc -p backend/tsconfig.json",
		"start": "pnpm run start:backend",
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview"
	},
	"dependencies": {
		"@hono/node-server": "^1.12.2",
		"hono": "^4.5.10",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@hono/vite-dev-server": "^0.15.2",
		"@types/node": "^22.5.2",
		"@vitejs/plugin-react": "^4.3.1",
		"concurrently": "8.2.2",
		"tsx": "^4.19.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.2"
	},
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"vite/client"
		]
	}
}